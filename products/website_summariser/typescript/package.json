{
  "name": "website-summariser",
  "version": "1.0.0",
  "description": "A TypeScript application that summarizes websites using LLM",
  "main": "dist/app.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "cross-env NODE_OPTIONS=--no-experimental-fetch ts-node -r node-fetch src/app.ts",
    "start1": "ts-node src/app.ts",
    "dev": "ts-node-dev --respawn src/app.ts"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "cheerio": "^1.0.0-rc.12",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.1",
    "markdown-it": "^14.0.0",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.9.9",
    "ollama": "^0.5.12",
    "openai": "^4.26.0"
  },
  "devDependencies": {
    "@types/markdown-it": "^13.0.7",
    "@types/node": "^20.11.16",
    "@types/nodemailer": "^6.4.14",
    "cross-env": "^7.0.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
